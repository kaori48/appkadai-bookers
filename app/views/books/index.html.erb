<h1>Books</h1>
<!--表作成 -->
<table>
	<!--表見出し -->
    <thead>
	  <tr>
		    <th>Title</th> <th>Body</th> <!--空の見出しいらない -->
	  </tr>
    </thead>
    <!--表のボディ部分、繰り返し -->
    <tbody>
    	<tr>
    		<% @books.each do |book| %>
    		<!--id若い順に取り出す -->
    		<th><%= book.title %></th>
    		<th><%= book.body %></th>
    		<th><%= link_to "Show", book_path(book.id) %></th>
    		<th><%= link_to "Edit", edit_book_path(book.id) %></th>
    		<th><%= link_to "Destroy", book_path(book.id), method: :delete, "data-confirm" => "本当に削除しますか？" %></th>
    		<% end %>
    	</tr>
    </tbody>
</table>

<!--投稿フォーム -->
<h2>New book</h2>
  <!--form_for部分 エラ〜メッセージ-->
  <%= form_for @book do |f|%>
     <h4>Title</h4>
     <%= f.text_field :title %>
     <h4>Body</h4>
     <%= f.text_area :body %>

     <%= f.submit "Create Book" %>
  <% end %>
