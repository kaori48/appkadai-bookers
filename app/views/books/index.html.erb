<h1>Books</h1>
<!--表作成 -->
<table>
	<!--表見出し -->
    <thead>
	  <tr>
		    <th>Title</th> <th>Body</th> <!--空の見出しいらない -->
	  </tr>
    </thead>
    <!--表のボディ部分、繰り返し -->
    <tbody>
        <% @books.each do |book| %>
    	<tr>
    		<!--id若い順に取り出す -->
    		<td><%= book.title %></td>
    		<td><%= book.body %></td>
    		<td><%= link_to "Show", book_path(book.id) %></td>
    		<td><%= link_to "Edit", edit_book_path(book.id) %></td>
    		<td><%= link_to "Destroy", book_path(book.id), method: :delete, "data-confirm" => "本当に削除しますか？" %></td>
    	</tr>
        <% end %>
    </tbody>
</table>

<!--投稿フォーム -->
<h2>New book</h2>
  <!--form_for部分 エラ〜メッセージ-->
    <%= render partial: 'error.messages'  %>
  <%= form_for @book do |f|%>
  <div class="field">
     <label for="book_title">Title</label>
     <%= f.text_field :title %>
  </div>

  <div class="field">
     <label for="book_body">Body</label>
     <%= f.text_area :body %>
  </div>

  <div class="actions">
     <%= f.submit "Create Book" %>
  </div>
  <% end %>
